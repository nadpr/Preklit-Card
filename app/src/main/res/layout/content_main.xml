<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ssh.be.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_p"
        android:contentDescription="logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="PREKLIT"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SOFTWARE HOUSE"
        />

    <TextView
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorLight"/>
    <TextView
        android:id="@+id/nama"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@color/colorLight"
        android:textSize="19sp"
        android:text="Nadya Prabaningrum"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/jabatan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="@color/colorLight"
        android:layout_marginRight="20dp"
        android:text="UI/UX DESIGN"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="10dp"
        android:background="@color/colorLight"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/phone"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_phone"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08123456789"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/mail"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_mail"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nadyap@preklit.com"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/web"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_web"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.preklit.com"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1"
        android:layout_weight="0.25">
        <ImageView
            android:id="@+id/loc"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_loc"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yogyakarta"
            android:textColor="#000"
            android:textSize="17sp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="17dp"/>
    </LinearLayout>

</LinearLayout>